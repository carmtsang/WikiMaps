</head>
<body>
  <%- include('partials/_header') %>
  <header id="profile-head">
    <div id="profile-pic">
      <img src="/images/wikimaps_logo.png">
    </div>
    <h1>FirstName LastName</h1>
  </header>

  <main class="container">

    <section id="create-new-map">
      <div class="section_head">
        <h2>Create a new map</h2>
        <i class="fa-solid fa-location-crosshairs"></i>
      </div>
      <div id="create-map-body">
        <div id="map"></div>

        <form id="new-map-form" action="/maps" method="post">
          <label for="map-name">Map Name</label>
          <input type="text" id="map-name" name="name" value="eg. Best Coffee in Town"><br>
          <label for="map-description">What are you bookmarking?</label>
          <textarea name="text" id="map-description"></textarea>
          <div class="button-counter">
            <button type="submit">Add Map</button>
            <output name="counter" class="counter" for="map-description">100</output>
          </div>
        </form>
      </div>
    </section>

    <div id="profile_items">
      <div class="profile-column">
        <section id="my-maps">
          <div class="section_head">
            <h2>My Maps</h2>
            <i class="fa-solid fa-map-pin"></i>
          </div>
          <div class="user_map_list">
            <div class="map-name-description">
              <a href="/maps/id">Calgary Vegan Restaurants</a>
              <p>description of map blah blah blah blah. description of map blah blah blah blah  </p>
            </div>
            <form action="/maps/:id/:delete" method="post">
              <button class="button" type="submit"><i class="fa-solid fa-trash-can"></i></button>
            </form>
          </div>
          <div class="user_map_list">
            <div class="map-name-description">
              <a href="/maps/id">Dog parks</a>
              <p>description of map blah blah blah blah. description of map blah blah blah blah  </p>
            </div>
            <form action="/maps/:id/:delete" method="post">
              <button class="button" type="submit"><i class="fa-solid fa-trash-can"></i></button>
            </form>
          </div>
          </section>
          <section id="my-contributions">
            <div class="section_head">
              <h2>My Contributions </h2>
              <i class="fa-solid fa-map-location-dot"></i>
            </div>
            <div class="user_map_list map-name-description">
              <a href="/maps/id">Exotic House Plants</a>
              <p>description of map blah blah blah blah. description of map blah blah blah blah  </p>
            </div>
            <div class="user_map_list map-name-description">
              <a href="/maps/id">Best Coffee Shops</a>
              <p>description of map blah blah blah blah. description of map blah blah blah blah  </p>
            </div>
          </section>
        </div>

      <div class="profile-column">
        <section class="map_list">
          <div class="section_head">
            <h2>Favourite Maps</h2>
            <i class="fa-solid fa-location-pin-lock"></i>
          </div>
          <div class="user_map_list">
            <div class="map-name-description">
              <a href="#">Random liked map 1</a>
              <p>description of map</p>
            </div>
            <form action="/maps/:id/:delete" method="post">
              <button class="button" type="submit"> <i class="fa-solid fa-heart"></i></button>
            </form>

          </div>
          <div class="user_map_list">
            <div class="map-name-description">
              <a href="#">Random liked Map 2</a>
              <p>description of map</p>
            </div>
            <form action="/maps/:id/:delete" method="post">
              <button class="button" type="submit"> <i class="fa-solid fa-heart"></i></button>
            </form>

          </div>
          <div class="user_map_list">
            <div class="map-name-description">
              <a href="#">Random liked Map 3</a>
              <p>description of map blah blah blah blah. description of map blah blah blah blah  </p>
            </div>
            <form action="/maps/:id/:delete" method="post">
              <button class="button" type="submit"> <i class="fa-solid fa-heart"></i></button>
            </form>
          </div>
        </section>
      </div>
    </div>




  </main>


  <script type="text/javascript" src="/scripts/leaflet.js"></script>
