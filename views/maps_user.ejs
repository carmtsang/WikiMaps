<!DOCTYPE html>
<html lang="en">
<head>
  <title>Wiki Maps</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/user-home.css" type="text/css" />

    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>


</head>
<body>
  <%- include('partials/_header') %>
  <header>
    <h1>Username's Profile</h1>
  </header>

  <main class="container">
    <div id="profile_items">
      <div class="left">
        <section id="my_maps">
          <h2>My Maps</h2>
          <div class="user_map_list">
            <a href="/maps/id">Calgary Vegan Restaurants</a>
            <div class="button">
              <form action="/maps/:id" method="post">
                <button type="submit">Edit</button>
              </form>
              <form action="/maps/:id/:delete" method="post">
                <button type="submit">Delete</button>
              </form>
          </div>
        </div>
        <div class="user_map_list">
          <a href="/maps/id">Exotic house</a>
          <div class="button">
            <form action="/maps/:id" method="post">
              <button type="submit">Edit</button>
            </form>

            <form action="/maps/:id/:delete" method="post">
              <button type="submit">Delete</button>
            </form>
          </div>
        </div>
        </section>
        <section id="my_contributions">
          <h2>My Contributions</h2>
          <div class="user_map_list">
            <a href="/maps/id">Movie locations</a>
            <div class="button">
              <form action="/maps/:id" method="post">
                <button type="submit">Edit</button>
              </form>
          </div>
        </div>
        <div class="user_map_list">
          <a href="/maps/id">Instagram worthy restaurants</a>
          <div class="button">
            <form action="/maps/:id" method="post">
              <button type="submit">Edit</button>
            </form>
          </div>
        </div>
        </section>
      </div>

      <div class="right">
        <section class="map-list">
          <h2>Favourite Maps</h2>
          <div class="liked-map">
            <a href="#">Random liked map 1</a>
            <p>description of map</p>
            <span class="heart-icon">
              <i class="fa-solid fa-heart"></i>
            </span>
          </div>
          <div class="liked-map">
            <a href="#">Random liked Map 2</a>
            <p>description of map</p>
            <span class="heart-icon">
              <i class="fa-solid fa-heart"></i>
            </span>
          </div>
          <div class="liked-map">
            <a href="#">Random liked Map 3</a>
            <p>description of map</p>
            <span class="heart-icon">
              <i class="fa-solid fa-heart"></i>
            </span>
          </div>
        </section>
      </div>
    </div>

    <div>
      <section id="creat_new_map">
        <h2>Create a new map</h2>
      </section>
    </div>

  </main>
</body>
</html>
